<body>

<!--Daftar Produk-->
<div class="container mt-5">
    <div class="judul-produk" style="background-color: #f700ff; padding: 5px 10px; border: black;">
        <h5 class="text-center" style="margin-top: 5px; color: rgb(0, 0, 0);">PRODUCTS LAJUBEDA<span><p>(Lapak Jual Beli Daleman)</p></span></h5>
    </div>
    <div class="row">
        <% data.forEach((el, i) => { %>
        <div class="col-lg-2 col-md-2 com-sm-4 col-6 mt-3" >
            <div class="card text-center">
                <img src="<%= el.picture %>" class="card-img-top" alt="...">
                <div class="card-body" >
                  <h5 class="card-title"><%= el.itemName %></h5>
                    <p class="card-text"><%= formatToRupiah(el.price) %></p>
                    <p class="card-stock">Stock : <%= el.quantity %></p>
                    <p class="card-text">Description : <br><%= el.description %></p>
                  <a href="#" class="btn btn-warning d-grid mt-2">Add to Cart</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
